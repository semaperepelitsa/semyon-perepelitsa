.post
  %h1= post.title
  = markdownize post.text
  .data
    = compact_timestamp post.created_at
    - unless post.published?
      →
      = compact_timestamp post.updated_at
    = link_to '*', [:edit, post], :class => "admin"
    = link_to '#', post, :title => "Постоянная ссылка на эту мысль"
