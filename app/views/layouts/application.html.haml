!!!
%html{ :lang => I18n.locale }
  %head
    %meta{ :charset => Rails.application.config.encoding }
    %title= page_title
    = favicon_link_tag
    = stylesheet_link_tag 'http://yui.yahooapis.com/2.8.1/build/reset/reset-min.css'
    = yield :head
    = yield :stylesheets
    = csrf_meta_tag
  %body
    = content_for?(:page) ? yield(:page) : yield
    = counter_tag
