!!!
%html{ :lang => I18n.locale }
  %head
    %meta{ :charset => Rails.application.config.encoding }
    %title= page_title
    = favicon_link_tag
    = auto_discovery_link_tag :rss, posts_url(:rss)
    :css
      .admin { display: none }
    = stylesheet_link_tag 'http://yui.yahooapis.com/2.8.1/build/reset/reset-min.css', 'application'
    = stylesheet_link_tag 'admin' if admin?
    /[if lte IE 8]
      = javascript_include_tag 'http://cachedcommons.org/javascripts/html5/html5-enabled-min.js'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    %header
      %nav
        = link_to_unless current_page?(posts_path), t(:title), posts_path
        = link_to_unless current_page?(unpublished_posts_path), '~', unpublished_posts_path, :class => "admin", :rel => 'nofollow'
        = yield :nav
        = link_to '+', new_post_path, :class => 'admin new_link', :rel => 'nofollow'
    %section#main= yield
    - unless @at_form
      %footer
        = "#{t('.feedback')}:"
        = mail_to 'sema@sema.in'
    = counter_tag
