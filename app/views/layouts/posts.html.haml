- content_for :head do
  = auto_discovery_link_tag :rss, posts_url(:rss)
  :css
    .admin { display: none }
  = stylesheet_link_tag "posts"
  /[if lte IE 8]
    = javascript_include_tag 'http://cachedcommons.org/javascripts/html5/html5-enabled-min.js'
  = javascript_include_tag :defaults

- content_for :page do
  %header
    %nav
      = link_to_unless_current t(:title), posts_path
      = link_to_unless_current '~', unpublished_posts_path, :class => "admin", :rel => 'nofollow'
      = yield :nav
      = link_to '+', new_post_path, :class => 'admin new_link', :rel => 'nofollow'
  #content= yield
  - unless @hide_footer
    %footer
      =raw t('.feedback', :email => mail_to(t :email))

= render :file => 'layouts/application'
